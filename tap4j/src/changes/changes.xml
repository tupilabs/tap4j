<document xmlns="http://maven.apache.org/changes/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
    <properties>
        <title>Changes tap4j</title>
        <author email="brunodepaulak AT yahoo DOT com DOT br">Bruno P. Kinoshita</author>
    </properties>
    <body>
        <release version="4.0.7" date="2014-01-23" description="4.0.7 release">
            <action dev="ranford" type="fix" issue="24">
                Improving test and fixing issue #20 (again)
            </action>
        </release>
        <release version="4.0.6" date="2013-11-30" description="4.0.6 release">
            <action dev="ranford" type="fix" issue="20">
                Issue 20 quick fix: Exiting from the YAML block by looking at indentation correctly.
            </action>
        </release>
        <release version="4.0.5" date="2013-10-30" description="4.0.5 release">
            <action dev="kinow" type="fix" issue="19">
                org.tap4j.ext.testng.listener.*Yaml wont output YAMLish
            </action>
            <action dev="kinow" type="fix" issue="17">
                Stream with subtests chopping off last yaml diagnostic 
            </action>
            <action dev="kinow" type="fix" issue="18">
                Unable to write tap output due folder structure not being created
            </action>
        </release>
        <release version="4.0.4" date="2013-09-03" description="4.0.4 release">
            <action dev="kinow" type="fix" issue="16">
                Optional test numbers are not working
            </action>
            <action dev="kinow" type="fix" issue="1">
                YAML parser isn't parsing correctly.
            </action>
        </release>
        <release version="4.0.3" date="2013-07-20" description="4.0.3 release">
            <action dev="kinow" type="fix" issue="14">
                Diagnostics are added to all test cases, after one with diagnostics was found
            </action>
        </release>
        <release version="4.0.2" date="2013-07-19" description="4.0.2 release">
            <action dev="kinow" type="fix" issue="12">
                subtest as first test causes ParserException (Duplicated TAP plan found)
            </action>
        </release>
        <release version="4.0.1" date="2013-03-16" description="4.0.1 release">
            <action dev="kinow" type="fix" issue="13">
                Missing tests with skip_all
            </action>
        </release>
        <release version="4.0" date="2013-01-25" description="4.0 release">
            <action dev="kinow" type="add">
                Split the producers to have one that outputs only TAP 13 and another with YAMLish.
            </action>
            <action dev="kinow" type="add">
                Updated web site. Removing the link to the book too, until it gets updated.
            </action>
            <action dev="kinow" type="add">
                Separated project into multiple maven modules.
            </action>
            <action dev="kinow" type="add">
                Increased test coverage.
            </action>
            <action dev="kinow" type="fix">
                Simplified parsers with OO and options by constructor.
            </action>
            <action dev="kinow" type="add">
                Organized test resources packages.
            </action>
            <action dev="kinow" type="remove">
                Removed author tags.
            </action>
            <action dev="kinow" type="fix">
                Fixed code license headers.
            </action>
            <action dev="kinow" type="fix">
                Formatted code.
            </action>
            <action dev="kinow" type="add">
                Updated project web site with more examples.
            </action>
            <action dev="kinow" type="add">
                Updated integration with TestNG and JUnit.
            </action>
        </release>
        <release version="3.3" date="2012-11-24" description="3.3 release">
            <action dev="kinow" type="fix">
                Fixing subtests bug.
            </action>
        </release>
        <release version="3.2" date="2012-11-24" description="3.3 release">
            <action dev="kinow" type="add">
                Add subtests.
            </action>
        </release>
        <release version="3.2" date="2012-10-20" description="3.2 release">
            <action dev="kinow" type="add">
                Minor code clean up.
            </action>
        </release>
        <release version="3.1" date="2012-06-26" description="3.1 release">
            <action dev="kinow" type="add">
                Added a JUnit TAP Representer and a factory for TAP Producers.
            </action>
        </release>
        <!-- the issues prior to this release were in SourceForge.net. Now we are using GitHub. -->
        <release version="3.0" date="2012-05-10" description="3.0 release">
            <action dev="kinow" type="fix" issue="3525607">
                Added support to comment diagnostics
            </action>
            <action dev="kinow" type="fix" issue="3525603">
                Bug fix. Whenever the parser found a simple 'ok', like the one added
                by done_testing, it would increase the test number by 1
            </action>
            <action dev="kinow" type="fix" issue="3504508">
                Added support to subtests
            </action>
            <action dev="kinow" type="add">
                Code clean up, increasing the quality index measured by Sonar (from 91,
                to 98.5, FWIW)
            </action>
        </release>
        <release version="2.0.7" date="2012-03-12" description="First release">
            <action dev="kinow" type="add">
                Added maven changes plug-in.
            </action>
            <action dev="kinow" type="remove">
                Removed the code that verified if TAP Plan has been set either at the
                beginning or at the end of the TAP Stream.
            </action>
            <action dev="kinow" type="add">
                Added code to verify if TAP Plan has been set. Added unit tests.
            </action>
        </release>
    </body>
</document>
